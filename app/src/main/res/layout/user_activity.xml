<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <Button
        android:id="@+id/button2"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="100sp"
        android:text="@string/sub_rent"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200sp"
        android:layout_height="60sp"
        android:layout_marginLeft="350sp"
        android:layout_marginTop="100sp"
        android:text="@string/sub_return"
        tools:layout_editor_absoluteX="468dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="200sp"
        android:text="@string/sub_num" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="250sp"
        android:text="@string/sub_two" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="250sp"
        android:text="@string/sub_one" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350sp"
        android:layout_marginTop="250sp"
        android:text="@string/sub_three" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450sp"
        android:layout_marginTop="250sp"
        android:text="@string/sub_four" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="70sp"
        app:srcCompat="?android:attr/textSelectHandle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="60sp"
        android:text="@string/sub_text"
        android:textColor="#0000ff"
        android:textSize="24sp" />

</RelativeLayout>